{
  "$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
  "organizeImports": {
    "enabled": false,
    "ignore": [
      ".next",
      "node_modules",
      ".vercel",
      ".vscode",
      ".git",
      ".github",
      ".husky",
      "@types",
      ".expo",
      "out"
    ]
  },
  "linter": {
    "ignore": [
      ".next",
      "node_modules",
      ".vercel",
      ".vscode",
      ".git",
      ".github",
      ".husky",
      "@types",
      ".expo",
      "out"
    ],
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useButtonType": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "ignore": [
      ".next",
      "node_modules",
      ".vercel",
      ".vscode",
      ".git",
      ".github",
      ".husky",
      "@types",
      ".expo",
      "out"
    ],
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "arrowParentheses": "always",
      "jsxQuoteStyle": "double",
      "semicolons": "asNeeded",
      "quoteProperties": "asNeeded",
      "bracketSpacing": true,
      "bracketSameLine": false
    }
  }
}
